generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("ADVISOR") // ADVISOR, ADMIN
  status        String    @default("Active") // Active, Inactive
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  cases         Case[]
  tasks         Task[]
  activities    CaseActivity[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Client {
  id        String   @id @default(cuid())
  name      String
  name2     String?
  name3     String?
  email     String?
  phone     String?
  address   String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cases     Case[]
}

model Case {
  id        String   @id @default(cuid())
  caseNumber String?  @unique // Format: HTxxxx
  title     String
  status    String   @default("LEAD") // LEAD, APPLICATION, UNDERWRITING, OFFER, COMPLETED
  value     Float?
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id])
  advisorId String
  advisor   User     @relation(fields: [advisorId], references: [id])
  brokerName String?
  taskOwnerName String?
  tasks     Task[]
  activities CaseActivity[]
  deadline   DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  completed   Boolean  @default(false)
  dueDate     DateTime?
  caseId      String?
  case        Case?    @relation(fields: [caseId], references: [id])
  advisorId   String
  advisor     User     @relation(fields: [advisorId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  externalId  String?  @unique
  provider    String?  // OUTLOOK, GOOGLE
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CaseActivity {
  id        String   @id @default(cuid())
  caseId    String
  case      Case     @relation(fields: [caseId], references: [id], onDelete: Cascade)
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  type      String   // COMMENT, SYSTEM
  content   String
  createdAt DateTime @default(now())
}

model Invitation {
  id        String   @id @default(cuid())
  email     String   @unique
  token     String   @unique
  role      String   @default("ADVISOR") // ADVISOR, ADMIN
  expires   DateTime
  createdAt DateTime @default(now())
}
